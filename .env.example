# Anki MCP Server Configuration
# Copy this file to .env and adjust values as needed

# AnkiConnect host (default: localhost)
ANKI_MCP_HOST=localhost

# AnkiConnect port (default: 8765)
ANKI_MCP_PORT=8765

# AnkiConnect API key (optional, leave empty if not configured in AnkiConnect)
ANKI_MCP_API_KEY=

# HTTP timeout in seconds (default: 30)
ANKI_MCP_TIMEOUT=30

# Enable debug mode (default: false)
ANKI_MCP_DEBUG=false
